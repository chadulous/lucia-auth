{
	"name": "lucia-auth",
	"version": "0.3.0",
	"description": "A simple yet flexible authentication library",
	"main": "index.js",
	"types": "index.d.ts",
	"module": "index.js",
	"svelte": "index.js",
	"type": "module",
	"files": [
		"**/*"
	],
	"scripts": {
		"build": "rm -rf ./dist/* && tsc && cp ./package.json ./dist && cp ./README.md ./dist && cp .npmignore dist",
		"package": "pnpm build && cd dist && pnpm install --no-frozen-lockfile && pnpm publish --no-git-checks --access public && cd ../"
	},
	"bin": {
		"lucia": "cli/scripts/initialize.js"
	},
	"keywords": [
		"lucia",
		"authentication",
		"lucia-auth",
		"auth"
	],
	"exports": {
		"./package.json": "./package.json",
		".": "./index.js",
		"./adapter": "./adapter/index.js"
	},
	"typesVersions": {
		"*": {
			"adapter": [
				"adapter/index.d.ts"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pilcrowOnPaper/lucia-auth",
		"directory": "packages/lucia-auth"
	},
	"author": "pilcrowonpaper",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^18.6.2",
		"inquirer": "^9.1.4",
		"prettier": "^2.3.0",
		"svelte": "^3.50.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@types/inquirer": "^9.0.3",
		"nanoid": "^4.0.0"
	}
}
